<h1>Welcome to Your Workout Tracker</h1>
<h2>It's Time to Get Pumped!</h2>
</br>
<script src = "/workout-cs.js"></script>
<form id="newWorkout">
  <fieldset>
    <legend> Enter a New Workout </legend>
    <label> Name:
      <input type = "text" name = "workoutName" id ="workoutName" maxlength = "100">
    </label>
    </br>
    <label> Reps:
      <input type = "number" name = "reps" id = "reps" min = "1" max = "1000">
    </label>
    </br>
    <label> Weight:
      <input type = "number" name = "weight" id = "weight" min = "1" max = "1000">
    </label>
    </br>
    <label> Date:
      <input type = "date" name = "date" id = "date">
    </label>
    </br>
    <label> Lbs 
      <input type = "radio" name = "measure" id = "lbs" value = "1">
    </label>
    <label> KGs
	<input type = "radio" name = "measure" id = "kgs" value = "0">
    </label>
    </br>
    <input type= "submit" name = "addedWorkout" id="addedWorkout">
  </fieldset>
</form>
</br>
